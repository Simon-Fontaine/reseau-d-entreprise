# =============================================================================
# Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# Database (used by docker-compose)
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=reseau

# Database connection string (auto-constructed in docker-compose)
# For local dev without Docker, set this manually:
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/reseau

# Auth - generate with: openssl rand -base64 32
AUTH_SECRET=

# Auth URL (optional, defaults to http://localhost:3000)
AUTH_URL=http://localhost:3000