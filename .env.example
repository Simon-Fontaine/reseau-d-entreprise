# =============================================================================
# Production Environment
# =============================================================================
# Copy to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Gitea Runner
# -----------------------------------------------------------------------------
GITEA_URL=https://gitea.intranet.advancedyapping.be
GITEA_RUNNER_TOKEN=your_runner_token_here

# -----------------------------------------------------------------------------
# Container Registry
# -----------------------------------------------------------------------------
REGISTRY=gitea.intranet.advancedyapping.be
IMAGE_NAME=simon-fontaine/reseau-d-entreprise

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_strong_password
DB_NAME=web

# -----------------------------------------------------------------------------
# Auth (generate with: openssl rand -base64 32)
# -----------------------------------------------------------------------------
AUTH_SECRET=CHANGE_ME_generate_with_openssl
AUTH_URL=https://www.advancedyapping.be
