{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noImgElement": "warn"
      },
      "style": {
        "noCommonJs": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noDocumentImportInPage": "off",
        "noHeadImportInDocument": "off"
      }
    },
    "includes": [
      "**",
      "!**/.next/**",
      "!**/out/**",
      "!**/build/**",
      "!**/node_modules/**",
      "!next-env.d.ts"
    ]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.{js,jsx,ts,tsx,mjs,mts,cts}"],
      "javascript": {
        "globals": [
          "window",
          "document",
          "navigator",
          "localStorage",
          "sessionStorage",
          "fetch",
          "Headers",
          "Request",
          "Response",
          "URL",
          "FormData",
          "Blob",
          "process"
        ]
      }
    },
    {
      "includes": ["**/*.ts", "**/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "error"
          }
        }
      }
    }
  ],
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
